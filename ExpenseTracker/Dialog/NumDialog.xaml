<Window
    x:Class="ExpenseTracker.Dialog.NumDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExpenseTracker.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NumDialog"
    Width="300"
    Height="250"
    Background="{StaticResource Brush.Main.Background}"
    ResizeMode="NoResize"
    SizeToContent="Height"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBlock
                x:Name="Txt_Input"
                KeyDown="Txt_Input_KeyDown"
                Style="{StaticResource TextBlockStyle.Form}"
                Text="Enter Value" />
            <TextBox />
            <Button
                x:Name="Btn_Done"
                Click="Btn_Done_Click"
                Content="Done"
                Style="{StaticResource ButtonStyle.Main}" />
        </StackPanel>
    </Grid>
</Window>
