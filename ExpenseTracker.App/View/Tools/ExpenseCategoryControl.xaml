<UserControl
    x:Class="ExpenseTracker.View.Tools.ExpenseCategoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ExpenseTracker.View.Tools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="RootControl"
    d:DataContext="{d:DesignInstance local:ExpenseCategoriesViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border BorderBrush="{StaticResource Brush.Button.Alt}">
        <Grid>
            <StackPanel>
                <TextBlock Style="{StaticResource TextBlockStyle.Header1.Bold}" Text="Categories" />
                <ListView MinHeight="{Binding ActualHeight, ElementName=RootControl}" ItemsSource="{Binding ExpenseCategories}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
