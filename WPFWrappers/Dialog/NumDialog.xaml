<Window
    x:Class="WpfWrappers.Dialog.NumDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfWrappers.Dialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NumDialog"
    Width="300"
    Height="70"
    Background="{StaticResource Brush.Main.Background}"
    ResizeMode="NoResize"
    SizeToContent="Height"
    mc:Ignorable="d">
    <Grid>
        <GroupBox Header="Enter Value..." Style="{StaticResource GroupBoxStyle.Main}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="Txt_Value"
                    Grid.Column="0"
                    Height="30"
                    VerticalContentAlignment="Center" />
                <Button
                    x:Name="Btn_Done"
                    Grid.Column="1"
                    Height="30"
                    Click="Btn_Done_Click"
                    Content="Enter"
                    Style="{StaticResource ButtonStyle.Main}" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>
